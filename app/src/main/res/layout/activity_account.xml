<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="tech.steampunk.kinetic.UI.AccountActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar_contacts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/app_bar_layout"
            android:id="@+id/account_activity_toolbar"/>

    </android.support.design.widget.AppBarLayout>



    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/account_dp"
        android:layout_width="147dp"
        android:layout_height="148dp"
        android:background="@drawable/ic_action_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        tools:ignore="MissingConstraints"
        app:civ_border_width="2dp"
        app:civ_border_color="#FF000000"
        android:elevation="20dp"/>

    <ImageView
        android:scaleType="centerCrop"
        android:id="@+id/account_background"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:elevation="10dp"
        android:background="@drawable/accountbackground"/>

    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/account_name"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_below="@+id/account_dp"
        android:text="Enter Your Name"
        android:textSize="25sp"
        android:textStyle="bold|italic"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/account_status"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_below="@+id/account_name"
        android:text="Update Your Status"
        android:textSize="25sp"
        android:textStyle="bold|italic"
        android:layout_centerHorizontal="true"/>



</RelativeLayout>
